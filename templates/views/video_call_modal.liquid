<div id='video-call-wrapper' class='fixed hidden left-0 top-0 bottom-0 right-0 z-50 flex flex-wrap justify-center items-center bg-gray-800 bg-opacity-95'>
  <h2 class='text-center text-white text-3xl w-full'>Video call from <span class='chat-name'></span>...</h2>

  <div class='call-icons-wrapper w-full sm:w-3/4 md:1/2 lg:w-1/3 xl:w-1/4 flex justify-evenly mt-10'>

    <div class='answer p-8 bg-green-200 rounded-full cursor-pointer'>
      <i class="fas fa-video text-green-700 text-3xl"></i>
    </div>

    <div class='deny p-8 bg-red-200 rounded-full cursor-pointer'>
      <i class="fas fa-video-slash text-red-600 text-3xl"></i>
    </div>

  </div>
</div>