<html>

{% render 'head_partial' %}

<body>

<div class='w-screen h-screen justify-center items-center'>
  <div class='flex flex-col justify-center items-center w-screen h-screen'>

    <div class='flex flex-col justify-center items-center w-screen h-screen relative sm:w-4/5 md:w-2/3 lg:w-1/2 xl:w-1/4 xl:h-1/2'>

        <div class='absolute z-0 top-[32%] xs:top-[30%] lg:top-[32%] left-[5%] lg:left-[10%] w-[250px] h-[250px] md:w-[350px] md:h-[350px] bg-brand-purple bg-opacity-75 rounded-full mix-blend-multiply filter blur-2xl opacity-70 animate-blob'></div>
        
        <div class='absolute z-0 top-[32%] xs:top-[30%] lg:top-[32%] right-[5%] lg:right-[10%] w-[250px] h-[250px] md:w-[350px] md:h-[350px] bg-comment-button-blue rounded-full mix-blend-multiply filter blur-2xl opacity-25 animate-blob animation-delay-4000'></div>

        <div class='absolute z-0 bottom-[15%] xs:bottom-[18%] lg:bottom-[15%] w-[250px] h-[250px] md:w-[350px] md:h-[350px] bg-brand-blue bg-opacity-85 rounded-full mix-blend-multiply filter blur-2xl opacity-70 animate-blob animation-delay-2000'></div>

        {% render 'login_register_header.liquid', text: 'Need and account? ', 
          linkText: 'Register here.', href: '/registration', title: title %}

        <div
          class='w-11/12 mt-8 md:mt-12 flex-col rounded-lg bg-white bg-opacity-70 shadow-md border border-brand-purple border-solid relative z-10'>

          {% comment %} lg:w-1/3 md:w-4/6 sm:w-2/3 xs:w-11/12 xs:px-4 {% endcomment %}
          <div class="mt-8 px-10">
            <p class='text-base w-full text-center font-roboto text-red-500 mb-1 ml-1'>{{msg}}</p>

            <form method="post" action="/login" id='login-form'>
              {% comment %} {% render 'login_form_input', type: 'text', inputName: 'email', inputId: 'email', labelText: 'Email: ', required: true, placeholder: 'john_doe@email.com', errorLabelText: 'Email must be a valid email', hasErrorLabel: true, value: email %} {% endcomment %}
              {% comment %} {% render 'login_form_input', additionalLabelClasses:'mt-4', type: 'password', inputName: 'password', inputId: 'password', labelText: 'Password: ', required: true, value: password %} {% endcomment %}
              {% render 'login_form_input', type: 'text', inputName: 'email', inputId: 'email', labelText: 'Email: ', required: true, placeholder: 'john_doe@email.com', errorLabelText: 'Email must be a valid email', hasErrorLabel: true %}
              {% render 'login_form_input', additionalLabelClasses:'mt-4', type: 'password', inputName: 'password', inputId: 'password', labelText: 'Password: ', required: true %}
              
              <label class="block items-center text-lg xs:text-xl lg:text-base font-roboto mt-2 cursor-pointer ">
                <input 
                  type="checkbox" 
                  name='rememberMe'
                  class="w-4 h-4 xs:w-6 xs:h-6 lg:w-4 lg:h-4 rounded border-gray-300 text-brand-purple shadow-sm focus:border-brand-purple focus:ring focus:ring-offset-0 focus:ring-indigo-200 focus:ring-opacity-50" 
                  checked
                  value='rememberMe' />
                <span class="ml-2">Remember me</span>
              </label>

              {% render 'login_register_submit_button', text: 'Login'%}
            </form>
          </div>

        </div>
      
    </div>

  </div>
</div>


</body>
<script src="/script.bundle.js"></script>

</html>