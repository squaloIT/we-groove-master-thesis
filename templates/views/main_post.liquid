<div class='post-wrapper w-full border-b-2 border-super-light-gray-border flex flex-row space-x-5 py-3 px-0 xs:px-4 sm:px-8 justify-between' data-pid="{{post._id}}">
  <div class='post-content-container flex flex-col w-full text-lg'>
    <div class='post-content__info flex flex-row items-start w-full  px-2 xs:px-0'>
      {% render 'small_profile_image_rounded', user: post.postedBy %}

      <div class='post-content__user-info ml-2'>
        <p class="name text-sm sm:text-base font-bold mb-1 sm:-mb-1">{{post.postedBy.fullName}}</p>
        <span class="username text-xs sm:text-sm text-gray-500 ">@{{post.postedBy.username}}</span>
      </div>
    </div>

    <div class="post-content__text w-full xs:w-11/12 mt-1 cursor-pointer px-2 xs:px-0">
      <p class='text-sm sm:text-base py-2 px-2 sm:px-0 whitespace-pre-line'>{{post.content}}</p>
      <div class='w-full md:w-10/12'>
        {% if post.images.size > 0 %}
          {% render 'post_content_images', images: post.images %}
        {% endif %}
      </div>
    </div>

    <div class='post-content__time-posted-wrapper my-3  px-2 xs:px-0'>
      <div class='post-content__time-posted-container text-mid-gray-for-text text-xs xs:text-sm sm:text-base' >
        {% comment %} <span class='time'>{{post.time}}</span> {% endcomment %}
        <span class='time'>{{post.time}} Â·</span>
        {% comment %} <span class='date'>{{post.date}}</span> {% endcomment %}
        <span class='date'> {{post.date}}</span>
      </div>
    </div>

    <div class='post-content__numbers-wrapper flex justify-center  border-b border-t border-gray-200 '>
      <div class='w-full py-3 px-2 xs:px-0'>
        <div class='post-content__numbers-container w-full sm:w-1/2 flex justify-between text-xs xs:text-sm sm:text-base xs:px-2'>
          <div class='retweets-container w-1/3 sm:w-1/4 flex justify-start sm:justify-start items-baseline'>
            <span class='font-bold mr-1'>{{post.retweetUsers.size}}</span>
            <span class=''>Retweets</span>
          </div>
          
          <div class='comments-container w-1/3 sm:w-1/4 flex justify-center sm:justify-start items-baseline'>
            <span class='font-bold mr-1'>{{repliesNum}}</span>
            <span class=''>Comments</span>
          </div>
          
          <div class='likes-container w-1/3 sm:w-1/4 flex justify-end sm:justify-start items-baseline'>
            <span class='font-bold mr-1'>{{post.likes.size}}</span>
            <span class=''>Likes</span>
          </div>
        </div>
      </div>
    </div>
    
    <div class='px-2 xs:px-0'>
      {% render 'post_buttons_wrapper', post: post, user: user, showNumbers: false %}
    </div>
  </div>
</div>