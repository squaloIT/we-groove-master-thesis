{% comment %} <div class='post-content-images-wrapper w-[fit-content] space-y-1 max-h-[340px] max-w-full flex flex-wrap my-2 rounded-2xl overflow-hidden'> {% endcomment %}
<div 
  {% if images.size == 1 %}
    class='post-content-images-wrapper max-h-[340px] h-[170px] my-2 grid gap-1 grid-cols-1 grid-rows-1 rounded-2xl overflow-hidden'
  {% elsif images.size == 2 %}
    class='post-content-images-wrapper max-h-[340px] h-[170px] my-2 grid gap-1 grid-cols-2 grid-rows-1 rounded-2xl overflow-hidden'
  {% elsif images.size == 3 %}
    class='post-content-images-wrapper max-h-[340px] h-[340px] my-2 grid gap-1 grid-cols-2 grid-rows-2 rounded-2xl overflow-hidden'
  {% else %}
    class='post-content-images-wrapper max-h-[340px] h-[340px] my-2 grid gap-1 grid-cols-2 grid-rows-2 rounded-2xl overflow-hidden'
  {% endif %}
>
  {% for src in images %}
    <div 
      {% if images.size == 1 %}
        class='object-fill h-full w-full col-span-2'
      {% elsif images.size == 2 %}
        class='object-fill h-full w-full col-span-1'
      
      {% elsif images.size == 3 %}
        {% if forloop.index == 3 %}
            class='object-fill h-full w-full col-span-2'
        {% else %}
            class='object-fill h-full w-full col-span-1'
        {% endif %}
      
      {% else %}
        class='object-fill h-full w-full col-span-1'
      {% endif %}
    >
      <img src="{{src}}" class='object-fill h-full w-full' />
    </div>
  {% endfor %}
</div>