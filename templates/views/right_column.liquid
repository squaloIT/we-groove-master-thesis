<div class='right_column fixed'>
  <div class='search-users-hastags-container w-full pt-2 relative'>
    <div class='border border-comment-button-blue right-column-flex-gray rounded-full'>
      <svg viewBox="0 0 24 24" aria-hidden="true" class="pl-3 fill-current text-comment-button-blue w-8">
        <g>
          <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
        </g>
      </svg>
      
      <input id='topics-users-search' type='search' class='w-11/12 bg-transparent transparent-borderless-spinneles-element' />
    </div>

    <div class='result-modal hidden w-full absolute top-20 left-0 max-h-80 overflow-y-auto overflow-x-auto bg-white z-10 border border-comment-button-blue'>
      <div class='hashtags border-b-8 border-super-light-gray-border'>

      </div>

      <div class='users'>
        
      </div>
    </div>
  </div>

  <div class='popular-topics-wrapper mt-10'>
    <div class='popular-topics-container w-full rounded-3xl right-column-flex-gray pb-0 flex-wrap overflow-hidden'>
      <h2 class='font-roboto text-2xl font-semibold pl-5 pt-1 pb-2 w-full text-dark-gray-for-text mt-1'>Trends for you</h2>

      <div class="popular-topics-content w-full">
        {% for hashtag in popularHashtags %}

            {% render 'right_column_topic', hashtag: hashtag %}

        {% endfor%}
      </div>
    </div>
  </div>
</div>